%ul.panel-list
  - i = 0
  - @campus.each do |c|
    - i += 1
    %li 
      - link_to c, :method => :get, :remote => true, :class => 'get-item', :'data-type' => 'html' do
        = image_tag c.image_url(:small).to_s, :id => "img-small-#{c.id}"
        .title= c.short_name rescue ''
        .comment= c.name rescue ''
#counter
  .inner= "#{i} campus"

