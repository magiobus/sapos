%ul.panel-list
  - c = 0
  - @institutions.each do |institution|
    - c += 1
    %li 
      - link_to institution, :method => :get, :remote => true, :class => 'get-item', :'data-type' => 'html' do
        = image_tag institution.image_url(:small).to_s, :id => "img-small-#{institution.id}"
        .title= institution.short_name rescue ''
        .comment= institution.name rescue ''
#counter
  .inner= "#{c} instituciones"

